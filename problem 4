    public void charge()
    {
       System.out.print("Enter your amount of deposit: ");
       
       n = input.nextDouble();
       if (balance + n <= 500)
       balance = balance + n;
       
       else 
           System.out.print("Your credit is fully paid: ");
       System.out.print("\n\nNew Balance: " + balance);
       
       
       menu();       
    }
