        double x;
        public double DoHarmonic(double n)
        {
            
            //n = input.nextDouble();
            
            if (n == 1.0)
                
                return 1.0;
                
                else
                {
                    return x = (1.0/n) + DoHarmonic(n-1.0);
                 
                }

        }
            public static void main(String[] args) 
        {       
        Problem2 dh = new Problem2();
      Scanner input = new Scanner (System.in);
